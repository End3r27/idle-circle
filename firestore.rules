rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Circle members can access circle data
    match /circles/{circleId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
    }
    
    // Circle members can access battle logs
    match /circles/{circleId}/battles/{battleId} {
      allow read: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/circles/$(circleId)).data.members;
    }
    
    // Circle members can access forge data
    match /circles/{circleId}/forge/{forgeId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/circles/$(circleId)).data.members;
    }
  }
}